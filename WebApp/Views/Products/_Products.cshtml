@model IEnumerable<Product>
@*Burada IEnumerable yerine List kullanılabilir, ama IEnumerable daha flex*@


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                //row'a product-row class ismini vererek, ilgili isimden sonra click event'i tanımlanabilir.
                //Row'a product-id attribute'u ekleyerek, ilgili row'un product id'sini alabiliriz. (Sales Index sayfasın da, jQuery fonksiyonu için kullanılacak.)'
                <tr class="product-row" product-id="@product.ProductId">
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}