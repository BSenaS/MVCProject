@model Category

@section title {
    <h1>Welcome to Category Edit Page!</h1>
    <hr />
    @if(Model != null)
    {
        <h3>
            Category: @Model.Name
        </h3>
    }
    else
    {
        <h3>This Category Doesnt exist</h3>
    }
}
        
@{
    //Kategorileri editlemek için form ögesi olusturma.
}

<partial name="_Category" model="@Model" />
